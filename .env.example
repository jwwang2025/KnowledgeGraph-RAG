# 知识图谱项目配置
# 复制此文件并根据需要修改配置值

# ============== 路径配置 ==============
# 数据目录（默认值：./data）
# DATA_DIR=./data

# 原始文本数据文件（默认值：./data/raw_data/raw_data.txt）
# RAW_DATA_PATH=./data/raw_data/raw_data.txt

# ============== 模型配置 ==============
# ChatGLM 模型路径（使用本地模型）
CHATGLM_MODEL_PATH=./models/chatglm-6b

# 用于分词和 SPN4RE 任务的 BERT 模型（使用本地模型）
BERT_MODEL_NAME=./models/bert-base-chinese

# PaddleNLP UIE 模型（使用本地模型）
UIE_MODEL_NAME=./models/uie-base

# ============== 训练配置 ==============
# 数据拆分比例
TRAIN_RATIO=0.5
VALID_RATIO=0.2

# 训练参数
MAX_EPOCH=10
BATCH_SIZE=8
MAX_SPAN_LENGTH=10
NUM_GENERATED_TRIPLES=15

# 知识图谱迭代次数
MAX_ITERATION=10

# 扩展比例阈值
EXTEND_RATIO_THRESHOLD=0.01

# ============== GPU 配置 ==============
# 以逗号分隔的 GPU 编号（例如：0 或 0,1）
CUDA_VISIBLE_DEVICES=0

# 单GPU操作使用的默认GPU
DEFAULT_GPU=0

# ============== 服务器配置 ==============
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 重要：生产环境中务必设置安全的密钥！
# 生成方式：python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=

# 调试模式（生产环境请设为 false）
DEBUG=false

# ============== 模式配置 ==============
# 模式版本：v1, v2, v3, v4
SCHEMA_VERSION=v4
